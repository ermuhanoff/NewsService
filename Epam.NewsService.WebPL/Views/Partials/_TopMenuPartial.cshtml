@functions {
    public string GetClass(bool isActive)
    {
        if (isActive)
        {
            return "bg-dark text-light";
        }
        else
        {
            return "text-dark";
        }
    }
}
<nav class="">
    <ul class="nav nav-pills">
        <li class="nav-item">
            <h5> <a href="~/Views/Pages/Top" class="nav-link @GetClass(Request.Url.AbsolutePath == "/Views/Pages/Top")" data-news-type="top">Top news</a> </h5>
        </li>
        <li class="nav-item">
            <h5> <a href="~/Views/Pages/Follow" class="nav-link @GetClass(Request.Url.AbsolutePath == "/Views/Pages/Follow")" data-news-type="follow">Following</a></h5>
        </li>
    </ul>
</nav>