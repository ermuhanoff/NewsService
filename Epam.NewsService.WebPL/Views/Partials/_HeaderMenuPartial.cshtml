@{ 
    var urlHome = "/Views/Pages/Top";
    var urlAbout = "/Views/Pages/About";
}

@functions {
    public string GetActiveClassByUrl(string url)
    {
        return Request.Url.AbsolutePath == url ? "active" : "";
    }
}

<header class="h-100 d-flex justify-content-between p-2 ">
    <a class="navbar-brand" href="/"><span class="fw-bold fs-3 text-dark">Breaking</span class="fw-bold fs-3"> <span class="fs-6 text-white bg-dark rounded-3 py-1 px-2">News</span></a>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mb-2 mb-lg-0 me-4">
                    <li class="nav-item">
                        <a class="nav-link @GetActiveClassByUrl(urlHome)" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @GetActiveClassByUrl(urlAbout)" href="~/Views/Pages/About">About</a>
                    </li>
                </ul>
                <form class="d-flex" action="~/Views/Pages/Search">
                    <input class="form-control me-2 py-0 search-input" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-dark search-input-btn" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
</header>